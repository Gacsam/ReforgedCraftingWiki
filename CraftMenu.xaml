<Window x:Class="CraftApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CraftApp"
        mc:Ignorable="d"
        Title="Craft" Height="272" Width="302">
    <Grid>
        <Grid HorizontalAlignment="Center" Height="125" VerticalAlignment="Center" Width="175">
            <Button x:Name="BrowseFiles" Content="Click to Browse" HorizontalAlignment="Left" VerticalAlignment="Top" Click="BrowseFiles_Click" AllowDrop="True" DragEnter="BrowseFiles_DragEnter" Drop="BrowseFiles_Drop"/>
            <CheckBox x:Name="TitleGoods" Content="TitleGoods.fmg.json" HorizontalAlignment="Left" Margin="0,24,0,0" VerticalAlignment="Top" Width="132" IsEnabled="False" IsChecked="False"/>
            <CheckBox x:Name="TitleWeapons" Content="TitleWeapons.fmg.json" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="147" IsEnabled="False" IsChecked="False"/>
            <CheckBox x:Name="EquipMtrlSetParam" Content="EquipMtrlSetParam.csv" HorizontalAlignment="Left" Margin="0,65,0,0" VerticalAlignment="Top" Width="147" IsEnabled="False" IsChecked="False"/>
            <CheckBox x:Name="ShopLineupParam_Recipe" Content="ShopLineupParam_Recipe.csv" HorizontalAlignment="Center" Margin="0,85,0,0" VerticalAlignment="Top" Width="175" IsEnabled="False" IsChecked="False"/>
            <Button x:Name="ProcessButton" Content="Process" HorizontalAlignment="Center" Margin="0,105,0,0" VerticalAlignment="Top" Width="175" Click="ProcessButton_Click"/>
        </Grid>
    </Grid>
</Window>
